<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">

	<select id="select_list" resultType="member">
		SELECT * FROM member
	</select>
	
	<insert id="member_insert" parameterType="member">
		INSERT INTO member VALUES (seq_member_idx.nextVal, #{name}, #{id}, #{pwd}, #{email}, #{addr})
	</insert>
	
	<select id="select_one" parameterType="int" resultType="member">
		SELECT * FROM member WHERE idx=#{idx}
	</select>

	<update id="member_modify" parameterType="member">
		UPDATE member SET name = #{name}, id = #{id}, pwd = #{pwd}, email = #{email}, addr = #{addr} WHERE idx = #{idx}
	</update>
	
	<delete id="member_del" parameterType="int">
		DELETE FROM member WHERE idx = #{idx}
	</delete>
	
	<!-- id 확인 -->
	<select id="id_check" parameterType="String" resultType="member">
		SELECT * FROM member WHERE id = #{id}
	</select>
	
</mapper>












