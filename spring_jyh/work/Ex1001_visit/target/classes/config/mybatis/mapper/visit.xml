<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="v">
	<select id="visit_list" resultType="visit">
		SELECT * FROM visit
	</select>
	<insert id="visit_insert" parameterType="visit">
		INSERT INTO visit
		VALUES(
		seq_visit_idx.nextVal,
		#{name},
		#{content},
		#{pwd},
		#{ip},
		SYSDATE)
	</insert>
	
	<select id="visit_one" parameterType="int" resultType="visit">
		SELECT * FROM visit WHERE idx= #{idx}
	</select>
	
	<update id="visit_update" parameterType="visit">
		UPDATE visit SET
		name = #{name},
		content = #{content},
		pwd= #{pwd},
		ip = #{ip},
		regdate = SYSDATE
		WHERE idx = #{idx}
	</update>
	
	<delete id="visit_del" parameterType="int">
		DELETE FROM visit WHERE idx=#{idx}
	</delete>
</mapper>












