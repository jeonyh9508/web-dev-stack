<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="d">

	<!-- 3. mapper에 필요한 쿼리 추가 -->
	<select id="dept_list" resultType="vo.DeptVO">
		SELECT * FROM dept
	</select>

	<delete id="dept_delete" parameterType="int">
		DELETE FROM dept WHERE deptno=#{deptno}
	</delete>
	
	<select id="dept_one" resultType="vo.DeptVO" parameterType="int">
		SELECT * FROM dept WHERE deptno = #{deptno}
 	</select>
 	
 	<update id="modify" parameterType="java.util.Map">
 		UPDATE dept SET deptno = #{deptno}, dname = #{dname}, loc = #{loc} WHERE deptno = #{ori_deptno} 
 	</update>
</mapper>












