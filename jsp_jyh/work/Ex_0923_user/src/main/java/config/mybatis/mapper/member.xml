<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">

	<select id="member_list" resultType="vo.MemberVO">
		SELECT * FROM member ORDER
		BY idx desc
	</select>

	<insert id="member_regi" parameterType="vo.MemberVO">
		INSERT INTO member VALUES
		(seq_member_idx.nextVal, #{name}, #{id}, #{pwd},
		#{email}, #{addr})
	</insert>

	<delete id="member_del" parameterType="int">
		DELETE FROM member WHERE
		idx=#{idx}
	</delete>

	<select id="member" resultType="vo.MemberVO" parameterType="int">
		SELECT * FROM member WHERE idx=#{idx}
	</select>

	<update id="member_modify" parameterType="vo.MemberVO">
		UPDATE member SET 
		name = #{name}, id = #{id}, pwd=#{pwd}, email=#{email}, addr = #{addr} WHERE idx= #{idx}
	</update>
</mapper>
