<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="d">

	<select id="dept_list" resultType="vo.DeptVO">
	SELECT * FROM dept
	</select>
	
	<insert id="dept_insert" parameterType="vo.DeptVO">
		INSERT INTO dept VALUES (#{deptno} , #{dname}, #{loc})
	</insert>
	
	<delete id="dept_delete" parameterType="int">
		DELETE FROM dept WHERE deptno=#{deptno}
	</delete>
	
	<update id="dept_update" parameterType="java.util.Map">
		UPDATE dept SET deptno = #{deptno}, dname = #{dname}, loc = #{loc} WHERE deptno = #{ori_deptno}
	</update>
	
	<select id="modify_one" resultType="vo.DeptVO" parameterType="int">
	SELECT * FROM dept WHERE deptno = #{deptno}
	</select>
</mapper>
