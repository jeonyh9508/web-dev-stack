<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.haagendazo.bio.mapper.ChemicalMapper">
	<resultMap id="chemicalMap" type="Chemical">
		<id column="chemical_id" property="chemicalId" />
		<result column="product_name" property="productName" />
		<result column="cas_no" property="casNo" />
		<result column="msds_url" property="msdsUrl" />
		<result column="hazard_class" property="hazardClass" />
		<result column="stock_qty" property="stockQty" />
	</resultMap>
	
	<select id="viewChemical" parameterType="PagingDTO" resultMap="chemicalMap">
		SELECT * FROM chemical 
		<where>
			<if test="keyword != null">
				<if test="select == 'productName'">
					product_name = #{select}
				</if>
				<if test="select == 'casNo'">
					cas_no = #{casNo}
				</if>
				<if test="select == 'hazardClass'">
					hazard_class = #{hazardClass}
				</if>
			</if>
		</where>
		LIMIT #{offset}, #{limit}
	</select>
	
	<select id="total" resultType="int">
		SELECT COUNT(*) FROM chemical
	</select>
	
	<update id="modifyChemical" parameterType="int">
		UPDATE chemical
		SET stock_qty = #{stockQty}
		WHERE chemical_id = #{chemicalId}
	</update>
	
	<delete id="deleteChemical" parameterType="ArrayList">
		DELETE FROM chemical WHERE chemical_id IN
		<foreach collection="chemList" item="chemId" open="(" close=")" separator=",">
			#{chemId}
		</foreach>
	</delete>
</mapper>